<%- include('partials/head') %>
</head>
<body class="bg-gradient-to-br from-green-50 to-blue-50 min-h-screen">
    <%- include('partials/navbar') %>
    <div class="py-12 px-4">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Add Your Home</h1>
            <p class="text-gray-600">List your property on Apka Apna Airbnb</p>
        </div>
        
        <form action="/host/add-home" method="post" class="space-y-6">
            <div>
                <label for="homeName" class="block text-sm font-medium text-gray-700 mb-2">
                    Property Name
                </label>
                <input 
                    type="text" 
                    name="homeName" 
                    id="homeName" 
                    placeholder="Enter the House Name"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out"
                    required
                >
            </div>
            
            <div class="flex space-x-4">
                <input 
                    type="submit" 
                    value="Add Home"
                    class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer shadow-lg"
                >
                <a 
                    href="/" 
                    class="flex-1 bg-gray-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-gray-600 transition duration-300 ease-in-out text-center"
                >
                    Cancel
                </a>
            </div>
        </form>
    </div>
    </div>
</body>
</html>