<%- include('../partials/head') %>
<body class="bg-gradient-to-br from-pink-50 via-purple-50 to-pink-100 min-h-screen">
<%- include('../partials/navbar') %>
<div class="container mx-auto px-4 py-12">
        <!-- Main Content -->
        <div class="max-w-4xl mx-auto">
            <!-- Wishlist Section -->
            <div class="bg-white rounded-2xl shadow-xl p-8 mb-12 border-t-4 border-purple-500">
                <div class="text-center mb-8">
                    <div class="w-16 h-16 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <h2 class="text-3xl font-bold text-gray-800 mb-4 bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">My Wishlist</h2>
                    <p class="text-gray-600">Your favorite homes saved for future bookings.</p>
                </div>
                
                <% if (wishlist && wishlist.length > 0) { %>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% wishlist.forEach((home)=>{ %>
                            <a href="/homes/<%= home._id %>">
                            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 ease-in-out transform hover:scale-105">
                                <!-- Home Image -->
                                <div class="h-48 overflow-hidden">
                                    <% if (home.photoUrl) { %>
                                        <img src="<%= home.photoUrl %>" alt="<%= home.homeName %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                                            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Home Details -->
                                <div class="p-6">
                                    <!-- Home Name and Rating -->
                                    <div class="flex items-center justify-between mb-3">
                                        <h3 class="text-lg font-semibold text-gray-800 truncate flex-1"><%= home.homeName %></h3>
                                        <% if (home.rating) { %>
                                            <div class="flex items-center ml-2">
                                                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                                </svg>
                                                <span class="text-sm font-medium text-gray-700 ml-1"><%= home.rating %></span>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Location -->
                                    <% if (home.location) { %>
                                        <div class="flex items-center text-sm text-gray-500 mb-3">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            </svg>
                                            <%= home.location %>
                                        </div>
                                    <% } %>
                                    
                                    <div class="my-4">
                                       <%-include('../partials/add-or-remove-to-wishlist',{home})%>
                                    </div>

                                    <div class="flex items-center justify-between">
                                        <% if (home.price) { %>
                                            <div class="text-lg font-bold text-green-600">
                                                â‚¹<%= home.price %><span class="text-sm font-normal text-gray-500">/night</span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            </a>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-12">
                        <div class="w-20 h-20 bg-gradient-to-br from-pink-100 to-purple-100 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg">
                            <svg class="w-10 h-10 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-700 mb-3">Your wishlist is empty</h3>
                        <p class="text-gray-500 mb-6 max-w-md mx-auto">Start exploring and add homes that catch your eye to your wishlist!</p>
                        <a href="/homes" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-medium rounded-lg hover:from-pink-600 hover:to-purple-700 transition duration-300 shadow-lg">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Explore Homes
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
</div>

<!-- Add some custom styling for wishlist animations -->
<style>
    @keyframes heartbeat {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    .wishlist-card:hover .heart-icon {
        animation: heartbeat 0.6s ease-in-out;
    }
    
    .wishlist-header {
        position: relative;
        overflow: hidden;
    }
    
    .wishlist-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(236, 72, 153, 0.1), rgba(147, 51, 234, 0.1));
        z-index: -1;
    }
</style>

</body>
</html>