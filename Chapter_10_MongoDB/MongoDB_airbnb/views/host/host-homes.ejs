<%- include('../partials/head') %>
<body class="bg-gradient-to-br from-pink-50 via-purple-50 to-pink-100 min-h-screen">
<%- include('../partials/navbar') %>

<div class="container mx-auto px-4 py-12">
    <!-- Header Section -->
    <div class="max-w-6xl mx-auto mb-8">
        <div class="text-center mb-8">
            <div class="w-20 h-20 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
            </div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent mb-4">Host Dashboard</h1>
            <p class="text-gray-600 text-lg">Manage your property listings and track your hosting performance</p>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mb-12">
            <a href="/host/add-home" class="inline-flex items-center bg-gradient-to-r from-pink-600 to-purple-600 text-white font-semibold py-3 px-8 rounded-xl hover:from-pink-700 hover:to-purple-700 transition duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add New Home
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto">
        <% if (addedHomes && addedHomes.length > 0) { %>
            <!-- Statistics Card -->
            <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                    <div class="text-center">
                        <div class="text-3xl font-bold text-pink-600"><%= addedHomes.length %></div>
                        <div class="text-gray-600">Total Properties</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-purple-600">Coming Soon</div>
                        <div class="text-gray-600">Average Rating</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-pink-600">Coming Soon</div>
                        <div class="text-gray-600">Monthly Revenue</div>
                    </div>
                </div>
            </div>

            <!-- My Properties Section -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <svg class="w-6 h-6 mr-3 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    My Properties
                </h2>
                
                <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-6">
                    <% addedHomes.forEach((home) => { %>
                        <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl border border-gray-200 overflow-hidden hover:shadow-xl transition duration-300 ease-in-out transform hover:scale-105">
                            <!-- Home Image -->
                            <div class="h-48 overflow-hidden relative">
                                <% if (home.photoUrl) { %>
                                    <img src="<%= home.photoUrl %>" alt="<%= home.homeName %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <div class="w-full h-full bg-gradient-to-br from-pink-200 to-purple-200 flex items-center justify-center">
                                        <svg class="w-12 h-12 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                        </svg>
                                    </div>
                                <% } %>
                                <div class="absolute top-3 right-3">
                                    <span class="bg-white/90 backdrop-blur-sm text-pink-600 font-semibold px-2 py-1 rounded-lg text-sm">
                                        Active
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Home Details -->
                            <div class="p-6">
                                <!-- Home Name and Rating -->
                                <div class="mb-4">
                                    <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.homeName %></h3>
                                    
                                    <!-- Location -->
                                    <% if (home.location) { %>
                                        <div class="flex items-center text-sm text-gray-500 mb-3">
                                            <svg class="w-4 h-4 mr-2 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            </svg>
                                            <%= home.location %>
                                        </div>
                                    <% } %>

                                    <!-- Rating and Price -->
                                    <div class="flex items-center justify-between mb-4">
                                        <% if (home.rating) { %>
                                            <div class="flex items-center">
                                                <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                                </svg>
                                                <span class="text-sm font-medium text-gray-700 ml-1"><%= home.rating %></span>
                                            </div>
                                        <% } %>
                                        
                                        <% if (home.price) { %>
                                            <div class="text-lg font-bold text-green-600">
                                                ₹<%= home.price %><span class="text-sm font-normal text-gray-500">/night</span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="border-t border-gray-200 pt-4">
                                    <div class="flex gap-3">
                                        <a href="/host/edit-home/<%= home._id %>?isEditing=true" class="flex-1">
                                            <button class="w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white font-semibold py-2.5 px-4 rounded-lg hover:from-blue-600 hover:to-blue-700 transition duration-200 shadow-md hover:shadow-lg flex items-center justify-center">
                                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                                Edit
                                            </button>
                                        </a>
                                        <form action="/host/delete-home/<%= home._id %>" method="post" class="flex-1">
                                            <button type="submit" onclick="return confirm('Are you sure you want to delete this property?')" class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white font-semibold py-2.5 px-4 rounded-lg hover:from-red-600 hover:to-red-700 transition duration-200 shadow-md hover:shadow-lg flex items-center justify-center">
                                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                Delete
                                            </button>
                                        </form>
                                    </div>

                                    <!-- View Property Link -->
                                    <div class="mt-3">
                                        <a href="/homes/<%= home._id %>" class="block text-center text-pink-600 hover:text-pink-700 font-medium transition duration-200">
                                            View Property Details →
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
                <div class="w-24 h-24 bg-gradient-to-br from-pink-100 to-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-12 h-12 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Start Your Hosting Journey</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    You haven't added any properties yet. Share your space with travelers and start earning today!
                </p>
                <a href="/host/add-home" class="inline-flex items-center bg-gradient-to-r from-pink-600 to-purple-600 text-white font-semibold py-3 px-8 rounded-xl hover:from-pink-700 hover:to-purple-700 transition duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add Your First Home
                </a>
            </div>
        <% } %>
    </div>
</div>

</body>
</html>